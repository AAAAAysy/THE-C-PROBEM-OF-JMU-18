#include<stdio.h>
int main()
{
	int i,menu;
	printf("[1] apple\n[2] pear\n[3] orange\n[4] grape\n[0] exit\n");
	for(i=1;i<=5;i++){
		scanf("%d",&menu);
		if(menu==1){
			printf("price = 3.00\n");
		}
		else if(menu==2){
			printf("price = 2.50\n");
		}
		else if(menu==3){
			printf("price = 4.10\n");
		}
		else if(menu==4){
			printf("price = 10.20\n");
		}
		else if(menu==5||menu==0){
			break;
		}
		else{
			printf("price = 0.00\n");
		}
	}
	return 0;
}
